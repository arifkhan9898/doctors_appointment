@model OnlineDoctorsAppointmentApp.Models.Appointment

@{
    ViewBag.Title = "Create Appoinment";

}

<h2>Create Appoinment</h2>


@using (Html.BeginForm("Create", "Appointment", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        
        @Html.ValidationSummary(true)
        
        @{
            int doctorId = ViewBag.Doctor.DoctorId;
            
            int chamberId = ViewBag.Chamber.ChamberId;
            string doctorName = ViewBag.Doctor.Name;
        }
        <div class="form-group">
            @Html.Label("Doctor Name:", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @doctorName

            </div>
        </div>
        
        <div class="form-group">
            @Html.Label("Appointment Time:", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @ViewBag.AppointmentTime
            </div>
        </div>
        
        <div class="form-group">
            @Html.Label("Serial No:", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @ViewBag.SerialNo
            </div>
        </div>
        
        @*patient name entry*@

        <div class="form-group">
            @Html.Label("Patient Name:", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("patientName")
                @Html.ValidationMessageFor(model => model.PatientName)
            </div>
        </div>
 
        @*Patient Phone No entry*@
        
        <div class="form-group">
            @Html.Label("Phone No:", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("patientPhone")
                @Html.ValidationMessageFor(model => model.PatientPhone)
            </div>
        </div>
        
        
        @*patient email entry*@
        
        <div class="form-group">
            @Html.Label("Email:", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("patientEmail")
                @Html.ValidationMessageFor(model => model.PatientEmail)
            </div>
        </div>
        
        @*patient Address entry*@
        
        <div class="form-group">
            @Html.Label("Address:", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("patientLocation")
                @Html.ValidationMessageFor(model => model.PatientEmail)
            </div>
        </div>
        
        @*notificaction subscribe textbox*@

        @*<div class="form-group">
            @Html.Label("Subscribe for Notification:", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.CheckBox("isNotificationSubscribed")
            </div>
        </div>*@
        <div class="form-group">
            @Html.Label("Subscribe for Notification:", new { @class = "control-label col-md-2" })
            @Html.CheckBoxFor(model => model.IsNotificationSubscribed)
            @Html.ValidationMessageFor(model => model.IsNotificationSubscribed)
        </div>
        



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}