@model OnlineDoctorsAppointmentApp.Models.Appointment
@using OnlineDoctorsAppointmentApp.Models;

@{
    ViewBag.Title = "Create Appoinment";

}

<h2>Create Appoinment</h2>


@using (Html.BeginForm("Create", "Appointment", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        
        @Html.ValidationSummary(true)        

        <div class="form-group">
            @Html.Label("Doctor Name:", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
             @ViewBag.SelectedDoctor.DoctorName

            </div>
        </div>
        
        <div class="form-group">
            @Html.Label("Appointment Time:", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @ViewBag.AppointmentTime
            </div>
        </div>
        
        <div class="form-group">
            @Html.Label("Serial No:", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @ViewBag.SerialNo
            </div>
        </div>
        
        @*patient name entry*@

        <div class="form-group">
            @Html.Label("Patient Name:", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PatientName)
                @Html.ValidationMessageFor(model => model.PatientName)
            </div>
        </div>
 
        @*Patient Phone No entry*@
        
        <div class="form-group">
            @Html.Label("Phone No:", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PatientPhone)
                @Html.ValidationMessageFor(model => model.PatientPhone)
            </div>
        </div>
        
        
        @*patient email entry*@
        
        <div class="form-group">
            @Html.Label("Email:", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PatientEmail)
                @Html.ValidationMessageFor(model => model.PatientEmail)
            </div>
        </div>
        

        
        @*patient Address entry*@
        
        <div class="form-group">
            @Html.Label("Address:", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PatientAddress)
                @Html.ValidationMessageFor(model => model.PatientAddress)
            </div>
        </div>
        
        @*notificaction subscribe textbox*@
        <div class="form-group">
            @Html.Label("Subscribe for Notification:", new { @class = "control-label col-md-2" })
            @Html.CheckBoxFor(model => model.IsNotificationSubscribed)
            @Html.ValidationMessageFor(model => model.IsNotificationSubscribed)
        </div>
        
        
        @*passing DoctorId,ChamberId,AppointmentTime (from the search controller) to controller*@

        <input type="text" name="DoctorId" value='@ViewBag.SelectedDoctor.DoctorId' hidden="hidden" />
        <input type="text" name="ChamberId" value="@ViewBag.SelectedChamber.ChamberId" hidden="hidden" />
        <input type="text" name="VisitingSessionId" value="@ViewBag.SelectedVisitingSession.VisitingSessionId" hidden="hidden" />
        <input type="text" name="AppointmentTime" value="@ViewBag.AppointmentTime" hidden="hidden" />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}